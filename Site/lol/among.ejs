<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>

  <!-- PRE LOADER -->

  <!--
     <div class="preloader">
          <div class="sk-spinner sk-spinner-wordpress">
               <span class="sk-inner-circle"></span>
          </div>
     </div>
     -->

  <!-- Navigation section  -->

  <%- include('../partials/header', {variant:'among'}); %>

  <!-- Home Section -->

  <section id="home">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <h2>Among Legends.</h2>
          <hr>
        </div>
      </div>
    </div>
  </section>

  <hr>

  <section id="rooms">
    <div class="scrollmenu" id="table">
      <table>
        <caption>Among legends Rooms</caption>
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Players</th>
            <th scope="col">Started</th>
            <th scope="col">Join</th>
          </tr>
        </thead>
        <tbody>
          <% discordclient.amonglegends.forEach(function(room) {%>
          <tr>
            <td>
              <%= room.name %>
            </td>
            <td>
              <%= Object.keys(room.players).length %>
            </td>
            <td>
              <%= room.started %>
            </td>
            <td>
              <a href="/lol/among/join?game=<%= room.id %>">â†ª</a>
            </td>
          </tr>
          <% });%>
          <tr>
            <form action="/lol/among/create" method="post">
              <td></td>
              <td></td>
              <td>
                <div class="col-md-3 col-sm-4" style="float: none;">
                  <input name="submit" id="submit" type="submit" class="form-control" value="Create Game" style="width:auto;">
                </div>
              </td>
              <td></td>
              <td></td>
            </form>
          </tr>
        </tbody>

      </table>
    </div>
  </section>

  <!-- Footer Section -->

  <footer>
    <%- include('../partials/footer'); %>
  </footer>


  <!-- SCRIPTS -->

  <script src="/js/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/custom.js"></script>
  <script>
    function clicked(id) {
      if (document.getElementById(id).className == "champion-enabled") {
        document.getElementById(id).classList.add("champion-disabled");
        document.getElementById(id).classList.remove("champion-enabled");
      } else {
        document.getElementById(id).classList.add("champion-enabled");
        document.getElementById(id).classList.remove("champion-disabled");
      }
    }
  </script>

</body>

</html>